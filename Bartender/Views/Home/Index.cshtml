@{
    ViewData["Title"] = "Home Page";
}
<div class="container">
    <table class="table table-bordered" style="margin-top:50px">
        <tr>
            <th>Drink Name</th>
            <th>Drink Type</th>
            <th>Alcohol Content</th>
            <th>Price</th>
            <th>Request Drink</th>
        </tr>
        <tr>
            <td>Mojito</td>
            <td>Cocktail</td>
            <td>10%</td>
            <td>$9</td>
            <td>
                <button type="button" value="drink1" class="btn btn-secondary" data-toggle="modal" data-target="#requestDrink">Request Drink</button>
            </td>
        </tr>
    </table>
</div>

<!-- Request Modal -->
<div class="modal fade" id="requestDrink" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Request Drink</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <input id="requestorName" type="text" class="form-control" placeholder="Enter Name">
                    </div>                   
                    <div class="form-group">
                        <select id="drinkQuantity" onchange="drinkQuant()">
                            <option>Select Quantity</option>
                            @for (int i = 1; i < 11; i++)
                            {
                                <option value="@i">@i Drink(s)</option>

                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <table class="table table-bordered" style="margin-top:10px">
                            <tr>
                                <th>Drink Cost</th>
                                <th>Quantity</th>
                                <th>Total</th>
                            </tr>
                        </table>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" onclick="requestDrink()">Request</button>
                <button class="btn btn-secondary" type="button" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

